alias python=python3
alias pip="python3 -m pip"

if [ $TMUX ]; then
    source "$HOME/$(basename $SHELL)rc"
    clear
fi

function gpa()
{
    git pull
    git fetch --all
    git branch -r
}

function name()
{
    uname -a | cut -d' ' -f2
}

function comp_inc_paths()
{
    if [ -z "$1" ]; then
        cmp="gcc"
    else
        cmp="$1"
    fi
    echo | $cmp -E -Wp,-v -
}
